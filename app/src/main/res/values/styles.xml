<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background_light</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="titleTextColor">#de000000</item>
        <item name="subheadTextColor">#8a000000</item>
        <item name="buttonTextColor">#de000000</item>
        <item name="dialpadButtonTextColor">@color/primary</item>
        
        <item name="dividerBackground">#1f000000</item>

        <item name="recentContactsHeaderBackground">#eaeaea</item>
        <item name="operatorsHeaderBackground">#eaeaea</item>

        <item name="iconBackspace">@drawable/ic_backspace_grey600_24dp</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="alertDialogTheme">@style/AlertDialogThemeLight</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/window_background_dark</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="titleTextColor">#ffffff</item>
        <item name="subheadTextColor">#b3ffffff</item>
        <item name="buttonTextColor">#ffffff</item>
        <item name="dialpadButtonTextColor">#ffffff</item>

        <item name="dividerBackground">#1fffffff</item>

        <item name="recentContactsHeaderBackground">#d9242424</item>
        <item name="operatorsHeaderBackground">#d9242424</item>

        <item name="iconBackspace">@drawable/ic_backspace_white_24dp</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>

        <item name="alertDialogTheme">@style/AlertDialogThemeDark</item>
    </style>

    <style name="DialpadButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="DialpadButtonText" parent="android:TextAppearance">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textColor">?attr/dialpadButtonTextColor</item>
        <item name="android:textSize">@dimen/font_display2</item>
    </style>
    
    <style name="AlertDialogThemeDark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AlertDialogThemeLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>
</resources>